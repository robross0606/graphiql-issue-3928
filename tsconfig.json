{
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    "outDir": "./dist",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": false,
    "target": "ES2022"
  }
}
